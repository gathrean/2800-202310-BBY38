      <form class="login-form">
        <h1>Welcome back!</h1>
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input type="email" class="form-control" name="email">
          <div class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" class="form-control" name="password">
        </div>
      </form>
    </header>
    <header>
      <button type="submit" class="btn white-button" value="Submit" formaction="/login" formmethod="post">Log
        In</button>
      <button type="submit" class="btn white-button" formaction="/resetPassword" formmethod="get">Forgot
        Password</button><br><br>
    </header>

    <div class="d-flex justify-content-center">
      <a href="/splash" class="btn btn-link return-button">Go back</a>
    </div>
    <br>
  </div>
  <%- include("splash-footer") %>