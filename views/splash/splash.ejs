<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        text-align: center;
        /* Center align the content */
    }

    .logo {
        width: 150px;
        height: auto;
        margin-bottom: 20px;
    }

    .animate {
        opacity: 0;
        transform: translateY(50px);
        animation: slide-up-and-fade-in 0.5s ease forwards;
    }

    @keyframes slide-up-and-fade-in {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>


<%- include("splash-header.ejs") %>
    <div class="container animate">
        <img src="https://cdn.discordapp.com/attachments/1101692795921645680/1106310966070755388/OrcaSwipe_Logo.png"
            alt="logo" class="logo">
        <h1 class="splash-text">OrcaSwipe</h1>
        <form method="POST" action="/splash">
            <button class="btn white-button" type="submit" name="action" value="signup">Create account</button><br><br>
            <button class="btn" type="submit" name="action" value="login">Log in</button>
        </form>
    </div>
