<%- include("splash-header") %>
<%- include("splash-header2.ejs") %>
    <div class="container animate">
        <header class="d-flex justify-content-center py-3">
            <form action="/signup" method="post" class="login-form">
                <h1>Sign up</h1>

                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input type="text" class="form-control" name="username" placeholder="Username">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Your name</label>
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" placeholder="Email">
                    <div class="form-text">We'll never share your email with anyone else.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>

                <button type="submit" class="btn blue-button" value="Sign up" formmethod="post">Sign up</button>
                <hr>
                <a href="/login" class="btn white-button">I have an account</a>
            </form>
        </header>
    </div>
    <%- include("splash-footer") %>